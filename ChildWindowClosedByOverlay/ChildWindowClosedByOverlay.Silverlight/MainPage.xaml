<UserControl x:Class="ChildWindowClosedByOverlay.Silverlight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="710"
	d:DesignWidth="714"
    >
    <Grid x:Name="LayoutRoot" Background="Green">

        <StackPanel VerticalAlignment="Center">
            <Button
                Content="Click me to show ChildWindow with the closing overley behaviour"
                Click="ShowChildWindowWithBehaviourButton_Click"
            
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20"
                FontWeight="Bold"
            />

            <Grid Margin="0 50 0 0"/>

            <Button
                Content="Click me to show ChildWindow with the closing overley"
                Click="ShowChildWindowButton_Click"
            
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20"
                FontWeight="Bold"
            />
        </StackPanel>

    </Grid>
</UserControl>
